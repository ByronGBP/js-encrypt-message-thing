{
    "extends": "standard",
    "env": {
        "es6": true,
        "node": true
    },
    "globals": {
        "document": false,
        "window": false,
        "console": false,
        "b": false,
        "animation": false,
        "clever": false
    },
    "rules": {
        "indent": [
            2,
            2
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": 0,
        "new-cap": 0
    }
}